        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextStyle</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Red">
        <item name="colorAccent">@color/colorAccent_red</item>
    </style>

    <!--<style name="TDialog" parent="?android:attr/progressBarStyle">-->
    <style name="TDialog" parent="@android:style/Widget.ProgressBar">
        <item name="colorAccent">@color/colorwhite</item>
    </style>

    <style name="MyMenuTextStyle">
        <item name="android:textColor">@color/textcolor_point</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PhotoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <!--设置图片选择界面标题栏以及底栏颜色-->
        <item name="colorPrimary">#38393E</item>
        <!--设置图片选择界面状态栏颜色-->
        <item name="colorPrimaryDark">#2F3034</item>
        <item name="actionBarSize">56dip</item>
    </style>

    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="actionBarSize">56dip</item>
    </style>

    <!-- 首页 -3dp-->
    <style name="mian_fragnebt_line">
        <item name="android:textColor">@color/mian_fragnebt_line</item>
        <item name="android:layout_height">@dimen/mian_fragnebt_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/mian_fragnebt_line</item>
    </style>

    <!-- 首页 -1dp-->
    <style name="mian_search_line">
        <item name="android:textColor">@color/mian_fragnebt_line</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/mian_fragnebt_line</item>
    </style>

    <style name="MyDialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@anim/tdialog_enter</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@anim/tdialog_exit</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/tdialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/tdialog_bottom_exit</item>
    </style>

    <style name="TTabLayout">
        <item name="android:textSize">10dp</item>
    </style>

</resources>
