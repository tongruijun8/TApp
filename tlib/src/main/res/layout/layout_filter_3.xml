<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <LinearLayout
        android:id="@+id/layout_filter_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ttitle_h2"
        android:background="@color/color_show"
        >
        <com.trj.tlib.views.TLinearLayout
            android:id="@+id/layout_filter_ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/layout_filter_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="filter1"
                android:textColor="@color/color_name"
                android:gravity="center"
                android:enabled="true"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/layout_filter_img1"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_xiala"
                android:layout_marginLeft="@dimen/between_spacing"
                />
        </com.trj.tlib.views.TLinearLayout>
        <com.trj.tlib.views.TLinearLayout
            android:id="@+id/layout_filter_ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/layout_filter_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="filter2"
                android:textColor="@color/color_name"
                android:gravity="center"
                android:enabled="true"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/layout_filter_img2"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/between_spacing"
                android:src="@mipmap/icon_xiala"/>
        </com.trj.tlib.views.TLinearLayout>
        <com.trj.tlib.views.TLinearLayout
            android:id="@+id/layout_filter_ll3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/layout_filter_name3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="filter3"
                android:textColor="@color/color_name"
                android:gravity="center"
                android:enabled="true"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/layout_filter_img3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/between_spacing"
                android:src="@mipmap/icon_xiala"/>
        </com.trj.tlib.views.TLinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_filter_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44888888"
        android:layout_marginTop="@dimen/ttitle_h2"
        android:visibility="gone"
        >
        <ListView
            android:id="@+id/layout_filter_listview"
            android:layout_width="match_parent"
            android:background="@color/color_show"
            android:layout_height="@dimen/ssk_height1"></ListView>

    </RelativeLayout>


</RelativeLayout>